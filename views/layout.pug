      style.
         body{font-family:"Inter", sans-serif}
         *{margin:0; padding:0; font-size:16px;}
         p{margin-bottom:0;}
         .container-sm { max-width:600px;margin:auto; padding:20px}
         .form-group + .form-group{margin-top:10px;}
         .form-group label{font-size:14px; color:#888;}
         a{text-decoration:none}
         .container{
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
         }
         .card-body{padding:30px;}
         .card{flex:1; border:0; box-shadow: 0 10px 40px rgba(0,0,0,.08); border:1px solid rgba(0,0,0,.03)}

         .btn,.form-control{padding:.7rem 1rem;}
         .dashboard-head{display:flex; align-items:center; padding-bottom:20px; margin-bottom:20px; border-bottom:1px solid rgba(0,0,0,.1)}
         .dashboard-username{font-weight:700; margin-left:5px;}
         .dashboard-logout{margin-left:auto; margin-right:0; color:#000;}
         .alert-dismissible .btn-close{padding:16px;}
         .alert{font-size:16px; padding:0.7rem 1rem; border:0; opacity:.9}
         .btn-close{background-size: 0.6em;}.todo{}
         .task-form{display:flex;}
         .task-form button{margin-left:10px}
         .task-list{margin-top:20px;}
         .task-item{display:flex; align-items:center;justify-content:space-between;}
         .task-item  + .task-item{margin-top:10px;}
         .task-title{ font-size:18px; font-weight:500; color:#000}
         .task-item.task--completed .task-title{text-decoration: line-through; color:#777}
         .task-buttons{display:flex;}
         .task-buttons button{width:20px; height:20px; background:transparent; color:#888; box-shadow:none; border:0; margin-left:8px;}
         .task-buttons button svg{width:20px;}
         .task-buttons button:hover{color:#000;}
