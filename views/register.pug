extends layout
block content
   .card
      .card-body
         h5.text-center.mb-3 Register
         //- include ./inc/messages.pug
         form(action="/users/register" method="POST")
            div.form-group
               label(for="name") Full Name
               input(class="form-control" type="text" id="name" name="name" placeholder="Full Name")
            div.form-group
               label(for="email") E-Mail
               input(class="form-control" type="email" id="email" name="email" placeholder="E-Mail")
            div.form-group
               label(for="password") Password
               input(class="form-control" type="password" id="password" name="password" placeholder="Create Password")
            div.form-group
               label(for="password2") Password
               input(class="form-control" type="password" id="password2" name="password2" placeholder="Confirm Password")
            button(type="submit" class="btn w-100 btn-md btn-dark mt-2") Register
            p.mt-2.text-center Have an account? 
               a.text-dark(href="/users/login"): strong Login 